<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="500dp"
    android:layout_height="200dp"

    tools:context="com.opus.virna7.UserDialogFragment"
    android:layout_centerInParent="false"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/message"
            android:layout_alignTop="@+id/typeicon"
            android:elevation="13dp"
            android:textAlignment="center"
            style="@android:style/Widget.DeviceDefault.TextView"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="@android:dimen/notification_large_icon_width"
            app:srcCompat="@drawable/raso1"
            android:id="@+id/typeicon"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="400dp"
            android:elevation="14dp" />

        <Button
            android:text="O.K."
            android:layout_width="134dp"
            android:layout_height="81dp"
            android:id="@+id/btok"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_below="@+id/message"
            android:layout_centerHorizontal="true"
            android:elevation="13dp"
            android:onClick="btokClicked" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/badge1"
            android:layout_alignTop="@+id/typeicon"
            android:id="@+id/badge"
            android:scaleY="0"
            android:layout_toRightOf="@+id/typeicon"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

</FrameLayout>

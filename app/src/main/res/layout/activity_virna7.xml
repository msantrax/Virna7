<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_virna7"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc"
    tools:context="com.opus.virna7.Virna7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wallpapper"
        android:layout_gravity="center"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:adjustViewBounds="false"
        android:background="@drawable/picno100a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_logged"
        android:layout_gravity="right|center_vertical"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:clickable="true"
        android:layout_marginLeft="720dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/bt_on_custom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:columnCount="3"
        android:rowCount="6"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/Keypad"
        android:focusable="false"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/ACodeHeader"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center|fill"
            android:layout_marginBottom="5dp"
            android:layout_row="0"
            android:text="Digite seu código de acesso  :"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/colorAccent" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/ACodepwd"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:contextClickable="false"
            android:textIsSelectable="false"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:clickable="false" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="0"
            android:layout_row="2"

            android:text="7"
            android:id="@+id/bt7"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="1"
            android:layout_row="2"

            android:text="8"
            android:id="@+id/bt8"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="2"
            android:layout_row="2"

            android:text="9"
            android:id="@+id/bt9"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="0"
            android:layout_row="3"

            android:text="4"
            android:id="@+id/bt4"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="1"
            android:layout_row="3"

            android:text="5"
            android:id="@+id/bt5"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="2"
            android:layout_row="3"

            android:text="6"
            android:id="@+id/bt6"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="0"
            android:layout_row="4"

            android:text="1"
            android:id="@+id/bt1"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="1"
            android:layout_row="4"

            android:text="2"
            android:id="@+id/bt2"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="2"
            android:layout_row="4"

            android:text="3"
            android:id="@+id/bt3"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="2"

            android:text="0"
            android:id="@+id/bt0"
            android:textStyle="bold"
            tools:textSize="24sp"
            android:background="@drawable/buttonborder" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:layout_column="2"
            android:layout_row="5"

            android:text="O.K."
            android:id="@+id/btkpok"
            android:textStyle="bold"
            tools:textSize="24sp"

            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder" />


        <Button
            android:layout_margin="5dp"
            android:id="@+id/bt_back"
            android:layout_column="2"
            android:layout_row="1"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/buttonborder"
            android:layout_height="40dp"
            android:layout_width="120dp"
            android:text="DEL"
            android:textStyle="normal|bold" />


    </GridLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/buttonborder"
        android:id="@+id/openbar"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleX="0"
        android:alpha="0" />

    <ImageView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/acplogo3"
        android:id="@+id/logoacp2"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="240dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/acplogo2"
        android:layout_alignParentTop="true"
        android:id="@+id/logoacp1"
        android:adjustViewBounds="false"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Modernização Logitech PM5 - Vale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pm5banner"
        android:textStyle="bold"
        android:textSize="48sp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="150dp"
        android:textColor="@android:color/holo_orange_dark" />

</RelativeLayout>

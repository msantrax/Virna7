<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".SetValDialogFragment"
    android:layout_centerInParent="false"
    android:layout_gravity="center_horizontal|center"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_marginTop="30dp">


    <ExpandableListView
        android:layout_weight="1"
        android:id="@+id/el_sweepalgo"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_width="300dp"
        android:elevation="0dp" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/el_sweepalgo">

        <TextView
            android:text="Interno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/lb_interno"
            android:textAlignment="center" />

        <TextView
            android:text="Velocidade"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/lb_sweepvel"
            android:textAlignment="textEnd"
            android:layout_marginLeft="100dp" />

        <TextView
            android:text="Externo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/lb_externo"
            android:textAlignment="center"
            android:layout_marginLeft="200dp" />

        <NumberPicker
            android:layout_height="wrap_content"
            android:id="@+id/np_interno"
            android:layout_width="100dp"
            android:layout_marginTop="20dp" />

        <NumberPicker
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/np_sweepvel"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp" />

        <NumberPicker
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/np_externo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="240dp" />

        <CheckBox
            android:text="Convexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_convex"
            android:checked="true"
            android:layout_marginTop="97dp"
            android:layout_marginLeft="200dp"
            android:visibility="invisible" />

    </FrameLayout>

</RelativeLayout>
